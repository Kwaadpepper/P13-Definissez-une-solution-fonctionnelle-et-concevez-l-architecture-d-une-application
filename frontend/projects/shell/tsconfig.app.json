{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/app",
    "types": [],
    "paths": {
      // INHERITANCE
      "@ycyw/shared": [
        "../../dist/shared"
      ],
      "@themes": [
        "../../themes"
      ],
      // SHELL
      "@core/*": [
        "./src/app/core/*"
      ],
      "@env/*": [
        "./src/environment/*"
      ],
      "@routes": [
        "./src/app/app.routes.ts"
      ],
      "@layout": [
        "./src/app/layout"
      ],
    },
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
